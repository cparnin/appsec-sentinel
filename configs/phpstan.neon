# AppSec-Sentinel PHPStan Configuration for PHP Code Quality
# PHPStan performs static analysis without running code

parameters:
    # Analysis level (0-9, higher = stricter)
    # Level 6 is a good balance of strictness and practicality
    level: 6

    # Paths to analyze (overridden by CLI arguments)
    paths:
        - src
        - app
        - lib

    # Paths to exclude from analysis
    excludePaths:
        - vendor
        - node_modules
        - tests
        - cache
        - tmp

    # Report unmatched ignored errors (helps keep config clean)
    reportUnmatchedIgnoredErrors: false

    # Check that function and method calls match signatures
    checkMissingIterableValueType: true
    checkGenericClassInNonGenericObjectType: true

    # Additional strictness options
    checkAlwaysTrueCheckTypeFunctionCall: true
    checkAlwaysTrueInstanceof: true
    checkAlwaysTrueStrictComparison: true
    checkExplicitMixedMissingReturn: true
    checkFunctionNameCase: true
    checkInternalClassCaseSensitivity: true

    # Memory limits for large projects
    tmpDir: tmp/phpstan
