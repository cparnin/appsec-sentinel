# OpenAI Configuration (not needed for AWS Bedrock)
#OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic/Claude Configuration (not needed for AWS Bedrock)
#CLAUDE_API_KEY=your-claude-api-key-here

# AWS Bedrock Configuration (RECOMMENDED for client engagements)
AI_PROVIDER=aws_bedrock
AWS_REGION=us-east-2
AWS_DEFAULT_REGION=us-east-2
# Configure IAM user with Bedrock access and obtain credentials
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AI_MODEL=us.anthropic.claude-sonnet-4-5-20250929-v1:0
INFERENCE_PROFILE_ID=arn:aws:bedrock:us-east-2:YOUR_ACCOUNT_ID:inference-profile/us.anthropic.claude-sonnet-4-5-20250929-v1:0


# Scanner Configuration
SEMGREP_TIMEOUT=300
GITLEAKS_TIMEOUT=120
APPSEC_SCAN_LEVEL=critical-high     # critical-high (default) or all
                                     # Note: Code quality findings are ALWAYS shown (regardless of this setting)
                                     # This setting only affects SECURITY findings

# Tool Selection (CLI/Web only - MCP and CI/CD always run all tools)
# Comma-separated list of tools to run
# Options: semgrep, trivy, gitleaks, code_quality, sbom, all
# Examples:
#   APPSEC_TOOLS=all                    # Run all tools (default)
#   APPSEC_TOOLS=semgrep,gitleaks       # Only SAST + secrets
#   APPSEC_TOOLS=trivy                  # Only dependency scanning
#   APPSEC_TOOLS=semgrep,code_quality   # SAST + code quality
APPSEC_TOOLS=all

# Code Quality Scanning (ON by default - ALWAYS shown regardless of scan level)
# Runs language-specific linters: ESLint (JS/TS), Pylint (Python), etc.
# Code quality findings are ALWAYS shown regardless of security scan level
APPSEC_CODE_QUALITY=true            # Enable code quality linting (recommended)

# AI Fix Generation Settings
APPSEC_AI_TEMPERATURE=0.0           # 0.0 = fully deterministic (recommended), 0.1 = slight variation

# Legacy AI Configuration (for reference)
#AI_PROVIDER=openai
#AI_PROVIDER=claude
AI_BATCH_SIZE=10
#AI_MODEL=gpt-4.1-mini
#AI_MODEL=claude-3-5-sonnet-20241022

# --- Recommended Models ---
# OpenAI: gpt-4.1-mini
# Claude: claude-sonnet-4-20250514

# Logging & Debug
APPSEC_LOG_LEVEL=INFO          # Set log level: DEBUG, INFO, WARNING, ERROR
APPSEC_DEBUG=false             # Enable debug mode for troubleshooting
LOG_LEVEL=INFO                 # Legacy logging configuration

# Business Metrics (for cost calculations)
SECURITY_ENGINEER_HOURLY_RATE=150 